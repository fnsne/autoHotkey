;

; Ctrl(real) + h, j, k, l => left, down, up, right

Control & h::			Send {Blind}{Control up}{Left DownTemp}
Control & h up::		Send {Blind}{Control up}{Left Up}

Control & j::			Send {Blind}{Control up}{Down DownTemp}
Control & j up::		Send {Blind}{Control up}{Down Up}

Control & k::			Send {Blind}{Control up}{Up DownTemp}
Control & k up::		Send {Blind}{Control up}{Up Up}

Control & l::			Send {Blind}{Control up}{Right DownTemp}
Control & l up::		Send {Blind}{Control up}{Right Up}

